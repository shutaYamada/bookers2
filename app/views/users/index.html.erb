<div class=" container"> 
  <div class="row">
    <div class="col-md-3">
        <h1>User info</h1>
        <%= render 'info', user: current_user %>
            
        <h1>New book</h1>
        <%= render 'books/form', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
        <h1>Users</h1>
        <table class="table">
            <tr>
                <th>image</th>
                <th>name</th>
                <th></th>
            </tr>
            <% @users.each do |user|  %>
            <tr>
                <td><%= image_tag user.get_profile_image(100, 100) %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
                <td>コメント数:<%= user.book_comments.count %></td>
            </tr>
            <% end %>
        </table>
    </div>
  </div>
</div>