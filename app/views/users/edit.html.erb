<div class="container mt-4">
    <% if @user.errors.any? %>
      <%= @user.errors.count %>error prohibited this obj from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
        <%= form_with model: @user do |f| %>
            <div><%= f.label :Name %></div>
            <div><%= f.text_field :name,class:"form-control mb-3" %></div>
            
            <div><%= f.label :Imafe %></div>
            <div><%= f.file_field :profile_image, accept: "image/*" %></div>
            <div><%= f.label :Introduction %></div>
            <div><%= f.text_area :introduction,class:"form-control"  %></div>
            
            <div><%= f.submit "Update User", class:"btn btn-success mt-3" %></div>
        <% end %>
    </div>
</div>