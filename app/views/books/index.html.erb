<div class=" container row mx-auto mt-4"> 
    <div class="col-md-3">
        <div>
            <h1>User info</h1>
            <%= image_tag current_user.get_profile_image(100, 100) %>
            <table class="table">
                <tr>
                    <th>name</th>
                    <th><%= current_user.name %></th>
                </tr>
                <tr>
                    <th>introduction</th>
                    <th><%= current_user.introduction %></th>
                </tr>
            </table>
        </div>
        <div>
            <%= link_to edit_user_path(current_user.id), class:"btn btn-secondary btn-block" do %>
                <i class="fa-solid fa-user-pen"></i>
            <% end %>
        </div>
        <div>
            <h1>New book</h1>
            <%= form_with model: @book do |f| %>

              <div><%= f.label :Title %></div>
              <div><%= f.text_field :title %></div>
  
              <div><%= f.label :Body%></div>
              <div><%= f.text_area :body %></div>
    
              <div><%= f.submit 'Create Book',class:"btn btn-success" %></div>
  
            <% end %>
        </div>
    </div>
    
    <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
        <table class="table">
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
            </tr>
            <% @books.each do |book| %>
            <tr>
                <td>
                    <%= link_to user_path(book.user.id) do %>
                        <%= image_tag book.user.get_profile_image(100, 100) %>
                    <% end %>
                </td>
                <td>
                    <%= link_to book_path(book.id) do %>
                        <%= book.title %>
                    <% end %>
                </td>
                <td><%= book.body %></td>
            </tr>
            <% end %>
        </table>
    </div>
</div>