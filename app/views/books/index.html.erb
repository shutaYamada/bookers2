<div class=" container ">
  <%= render 'layouts/errors', object: @book %>
  <div class="row">
      <div class="col-md-3">
        <h1>User info</h1>
        <%= render 'users/info', user: current_user %>
        <div>
            <h1>New book</h1>
            <%= render 'form', book: @book %>
        </div>
      </div>
    
    <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
        <table class="table">
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
            </tr>
            <% @books.each do |book| %>
            <tr>
                <td>
                    <%= link_to user_path(book.user.id) do %>
                        <%= image_tag book.user.get_profile_image(100, 100) %>
                    <% end %>
                </td>
                <td>
                    <%= link_to book_path(book.id) do %>
                        <%= book.title %>
                    <% end %>
                </td>
                <td><%= book.body %></td>
            </tr>
            <% end %>
        </table>
    </div>
  </div>
</div>