<table class="table">
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th></th>
                <th></th>
            </tr>
            <% books.each do |book| %>
            <tr>
                <td>
                    <%= link_to user_path(book.user.id) do %>
                        <%= image_tag book.user.get_profile_image(100, 100) %>
                    <% end %>
                </td>
                <td>
                    <%= link_to book_path(book.id) do %>
                        <%= book.title %>
                    <% end %>
                </td>
                <td><%= book.body %></td>
                <td>コメント数:<%= book.book_comments.count %></td>
                <td>
                    <%= render "favorites/btn", book: book %>
                </td>
            </tr>
            <% end %>
</table>