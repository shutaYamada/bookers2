<div class="container mt-4">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <%= render 'layouts/errors', object: @book %>

        <h1>Editing Book</h1>
        <%= form_with model: @book do |f| %>
            <div><%= f.label :Title %></div>
            <div><%= f.text_field :title,class:"form-control mb-3" %></div>
            <div><%= f.label :Opinion %></div>
            <div><%= f.text_area :body,class:"form-control"  %></div>
            <div><%= f.submit "Update Book", class:"btn btn-success mt-3" %></div>
        <% end %>
        
        <div class="mt-3">
            <%= link_to "Show", book_path(@book.id) %>
            |<%= link_to "Back", books_path %>
        </div>
    </div>
  </div>
</div>